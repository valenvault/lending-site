  <script src="app.js"></script>
  <script>
    function showSection(section) {
      document.getElementById('borrowerSection').classList.add('hidden');
      document.getElementById('lenderSection').classList.add('hidden');
      document.getElementById(section + 'Section').classList.remove('hidden');
      document.getElementById('borrowerTab').classList.remove('bg-teal-500');
      document.getElementById('lenderTab').classList.remove('bg-teal-500');
      if(section === 'borrower') {
        document.getElementById('borrowerTab').classList.add('bg-teal-500');
      } else {
        document.getElementById('lenderTab').classList.add('bg-teal-500');
      }
    }
  </script>
